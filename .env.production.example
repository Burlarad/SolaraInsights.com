# ==============================================================================
# SOLARA INSIGHTS - PRODUCTION/CLOUD ENVIRONMENT
# ==============================================================================
# This file is for CLOUD DEPLOYMENTS (Render, Vercel, etc).
#
# DO NOT commit this file with real values!
# Configure these as environment variables in your hosting platform.
#
# For Render: Dashboard > Your Service > Environment > Environment Variables
# For Vercel: Dashboard > Project > Settings > Environment Variables
#
# ==============================================================================

# ==============================================================================
# SUPABASE CLOUD CONFIGURATION
# ==============================================================================
# Get these from: Supabase Dashboard > Settings > API
# Use your cloud project, NOT local Supabase!

# Cloud URL (format: https://<project-ref>.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=https://<YOUR_PROJECT_REF>.supabase.co

# Anon Key (safe for client-side - has RLS restrictions)
NEXT_PUBLIC_SUPABASE_ANON_KEY=<YOUR_CLOUD_ANON_KEY>

# Service Role Key (CRITICAL: NEVER expose client-side!)
# This bypasses RLS - server-side only!
SUPABASE_SERVICE_ROLE_KEY=<YOUR_CLOUD_SERVICE_ROLE_KEY>

# ==============================================================================
# APPLICATION URLS (PRODUCTION)
# ==============================================================================
NEXT_PUBLIC_SITE_URL=https://solarainsights.com
NEXT_PUBLIC_APP_URL=https://solarainsights.com
APP_URL=https://solarainsights.com

# ==============================================================================
# OPENAI (PRODUCTION)
# ==============================================================================
OPENAI_API_KEY=<YOUR_PRODUCTION_OPENAI_API_KEY>

# Production model configuration
OPENAI_DAILY_INSIGHTS_MODEL=gpt-4.1-mini
OPENAI_HOROSCOPE_MODEL=gpt-4.1-mini
OPENAI_CONNECTION_BRIEF_MODEL=gpt-4.1-mini
OPENAI_YEARLY_INSIGHTS_MODEL=gpt-5.1
OPENAI_BIRTHCHART_MODEL=gpt-5.1
OPENAI_INSIGHTS_MODEL=gpt-5.1
OPENAI_PLACEMENTS_MODEL=gpt-5.1
OPENAI_DEEP_MODEL=gpt-4o
OPENAI_FAST_MODEL=gpt-4o-mini

# ==============================================================================
# STRIPE (LIVE MODE)
# ==============================================================================
# CRITICAL: Use LIVE keys in production, NOT test keys!
# Get from: Stripe Dashboard > Developers > API keys (toggle Live mode)
STRIPE_SECRET_KEY=sk_live_<YOUR_LIVE_SECRET_KEY>
STRIPE_WEBHOOK_SECRET=whsec_<YOUR_LIVE_WEBHOOK_SECRET>
STRIPE_PRICE_ID=price_<YOUR_LIVE_PRICE_ID>
STRIPE_FAMILY_PRICE_ID=price_<YOUR_LIVE_FAMILY_PRICE_ID>
STRIPE_PRICING_TABLE_ID=prctbl_<YOUR_LIVE_PRICING_TABLE_ID>
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_<YOUR_LIVE_PUBLISHABLE_KEY>
NEXT_PUBLIC_STRIPE_PRICING_TABLE_ID=prctbl_<YOUR_LIVE_PRICING_TABLE_ID>

# ==============================================================================
# EMAIL (RESEND)
# ==============================================================================
RESEND_API_KEY=<YOUR_PRODUCTION_RESEND_API_KEY>
RESEND_FROM="Solara Insights <hello@solarainsights.com>"

# ==============================================================================
# REDIS/VALKEY (PRODUCTION)
# ==============================================================================
# Use Internal URL from Render Valkey/Redis service
REDIS_URL=<YOUR_REDIS_INTERNAL_URL>

# ==============================================================================
# SOCIAL OAUTH (PRODUCTION)
# ==============================================================================
# Callback URLs must be registered pointing to production domain

META_APP_ID=<YOUR_META_APP_ID>
META_APP_SECRET=<YOUR_META_APP_SECRET>

TIKTOK_CLIENT_KEY=<YOUR_TIKTOK_CLIENT_KEY>
TIKTOK_CLIENT_SECRET=<YOUR_TIKTOK_CLIENT_SECRET>

X_CLIENT_ID=<YOUR_X_CLIENT_ID>
X_CLIENT_SECRET=<YOUR_X_CLIENT_SECRET>
X_OAUTH_ENABLED=false
NEXT_PUBLIC_X_OAUTH_ENABLED=false

REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# Token encryption (must be same key used to encrypt existing tokens!)
SOCIAL_TOKEN_ENCRYPTION_KEY=<YOUR_PRODUCTION_ENCRYPTION_KEY>

# ==============================================================================
# SECURITY
# ==============================================================================
AUTH_SECRET=<YOUR_PRODUCTION_AUTH_SECRET>
CRON_SECRET=<YOUR_PRODUCTION_CRON_SECRET>

# ==============================================================================
# PRODUCTION SETTINGS
# ==============================================================================
NODE_ENV=production

# CRITICAL: These must be OFF in production!
NEXT_PUBLIC_SOLARA_DEBUG=0
DEV_PAYWALL_BYPASS=false
OAUTH_DEBUG_LOGS=false
